<p style="color: green"><%= notice %></p>

<%= render @game %>

<div>
  <%= link_to "Edit this game", edit_game_path(@game) %> |
  <%= link_to "Back to games", games_path %>

  <%= button_to "Destroy this game", @game, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this game?" } %>
</div>

<div class="game">
  <label for="status_output">Game Status</label><br>
  <textarea id="status_output" style="width: 500px; height: 200px;" readonly></textarea><br>

<div id="chat" data-room="game-<%= @game.id %>">
  <label for="chat_output">Chat</label><br>
  <textarea id="chat_output" style="width: 500px; height: 200px;" readonly></textarea><br>
  <input type="text" id="chat_input" style="width: 400px;">
  <button id="chat_say">Say</button>
</div>

</div>

<% content_for :head do %>
<%= javascript_import_module_tag "game/chat" %>
<% end %>
